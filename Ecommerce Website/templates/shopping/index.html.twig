{% extends 'base.html.twig' %}

{% block content %}
    <h1>Mon panier</h1>

    {% if panier is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table>
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix unitaire</th>
                <th>Quantité</th>
                <th>Prix total</th>
            </tr>
            </thead>
            <tbody>
            {% for product in shopping %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} €</td>
                    <td>{{ product.quantity }}</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="3">Total</th>
                <td>{{ total }} €</td>
            </tr>
            </tfoot>
        </table>


    {% endif %}
{% endblock %}