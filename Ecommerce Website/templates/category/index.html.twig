{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1>{{ category.name }} page</h1>
        <a class="badge badge-primary" href="{{ path('category_show', {id: category.id, sort: 'desc'}) }}">Prices: Up to Down</a>
        <a class="badge badge-primary" href="{{ path('category_show', {id: category.id, sort: 'asc'}) }}">Prices: Down to Up</a>
    <section id="services" class="services">
        <div class="container">
            {% for product in category.products %}
                <ul>
                    <a href="{{ path('product_show', {'id': product.id}) }}">
                        <li>
                            <div class="d-flex align-items-stretch">
                                <div class="icon-box">
                                    <img src="{{ product.pictureUrl }}">
                                    <h3>{{ product.name }}</h3>
                                    <p>{{ product.price }}0 â‚¬</p>
                                </div>
                            </div>
                        </li>
                    </a>
                </ul>
            {% endfor %}
        </div>
    </section>
{% endblock %}
